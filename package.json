{
  "name": "file-renamer",
  "version": "1.0.0",
  "description": "A tool to rename files by removing specific patterns.",
  "author": "Leonid Korshunov",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "make": "electron-builder"
  },
  "devDependencies": {
    "electron": "^32.0.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.example.filerenamer",
    "productName": "File Renamer",
    "files": [
      "**/*"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "resources/icons/installer.ico",
      "uninstallerIcon": "resources/icons/uninstaller.ico",
      "uninstallDisplayName": "File Renamer",
      "license": "resources/license.txt"
    },
    "linux": {
      "icon": "resources/icons/linux/icon.png",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ]
    },
    "win": {
      "icon": "resources/icons/windows/icon.ico",
      "target": [
        "nsis"
      ]
    }
  }
}
